{
  "manifest_version": 3,
  "name": "Ultimate Tab",
  "version": "1.1",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "description": "Ultimate tab is a free and open source Chrome extension for managing and organizing tabs in the browser",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Store all tabs"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["contextMenus", "tabs", "storage", "declarativeContent"]
}
